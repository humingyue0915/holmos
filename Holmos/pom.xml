	</licenses>

	<scm>
		<connection>scm:svn:http://holmos.googlecode.com/svn/trunk/</connection>
		<developerConnection>scm:svn:http://holmos.googlecode.com/svn/trunk/</developerConnection>
		<url>http://holmos.googlecode.com/svn/trunk/</url>
	</scm>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>com.holmos</groupId>
				<artifactId>holmos-basetools</artifactId>
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
			<groupId>com.holmos</groupId>
				<artifactId>holmos-dbtest</artifactId> 
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
				<groupId>com.holmos</groupId>
				<artifactId>holmos-integration</artifactId>
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
				<groupId>com.holmos</groupId>
				<artifactId>holmos-managePlatform</artifactId>
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
				<groupId>com.holmos</groupId>
				<artifactId>holmos-regression</artifactId>
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
				<groupId>com.holmos</groupId>
				<artifactId>holmos-reflectAssert</artifactId>
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
				<groupId>com.holmos</groupId>
				<artifactId>holmos-webtest</artifactId>
				<version>${holmos.version}</version>
			</dependency>
			<dependency>
				<groupId>commons-lang</groupId>
				<artifactId>commons-lang</artifactId>
				<version>2.4</version>
			</dependency>
			<dependency>
				<groupId>commons-logging</groupId>
				<artifactId>commons-logging</artifactId>
				<version>1.1</version>
			</dependency>
			<dependency>
				<groupId>org.apache.velocity</groupId>
				<artifactId>velocity</artifactId>
				<version>1.7</version>
			</dependency>
			<dependency>
				<groupId>org.apache.velocity</groupId>
				<artifactId>velocity-tools</artifactId>
				<version>2.0</version>
			</dependency>
			<dependency>
				<groupId>org.projectlombok</groupId>
				<artifactId>lombok</artifactId>
				<version>0.11.0</version>
			</dependency>
			<dependency>
				<groupId>org.nutz</groupId>
				<artifactId>nutz</artifactId>
				<version>1.b.43</version>
			</dependency>
			<dependency>
				<groupId>org.jsoup</groupId>
				<artifactId>jsoup</artifactId>
				<version>1.6.2</version>
			</dependency>
			<dependency>
			    <groupId>org.mozilla</groupId>
			    <artifactId>rhino</artifactId>
			    <version>1.7R4</version>
			</dependency>
			<dependency>
				<groupId>com.google.code.gson</groupId>
				<artifactId>gson</artifactId>
				<version>2.2.2</version>
			</dependency>
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>4.8.1</version>
			</dependency>
			<dependency>
				<groupId>org.seleniumhq.selenium</groupId>
				<artifactId>selenium-java</artifactId>
				<version>2.25.0</version>
			</dependency>
			<dependency>
				<groupId>commons-dbcp</groupId>
				<artifactId>commons-dbcp</artifactId>
				<version>1.4</version>
			</dependency>
			<dependency>
				<groupId>mysql</groupId>
				<artifactId>mysql-connector-java</artifactId>
