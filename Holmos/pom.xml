	<groupId>com.holmos</groupId>
	<artifactId>holmos</artifactId>
	<version>1.0.2u1</version>
	<packaging>pom</packaging>
	<description>An automated testing framework for web testing,interface testing,database testing;also contains regression testing and the management for testcase</description>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.build.jdk>1.6</project.build.jdk>
		<holmos.version>1.0.2u1</holmos.version>
